<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/item_board_main_content_info">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/item_board_main_content_info_title">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="5dp"
                android:id="@+id/item_board_main_content_info_title_new_imageview"
                android:src="@drawable/ic_new"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#313131"
                android:singleLine="true"
                android:id="@+id/item_board_main_content_info_title_textview"
                android:text="일원상의 진리"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/item_board_main_content_info_detail">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#b5b5b5"
                android:text="관리자"
                android:id="@+id/item_board_main_content_info_detail_id_textview"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#b5b5b5"></LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.12.28"
                android:textColor="#b5b5b5"
                android:id="@+id/item_board_main_content_info_detail_date_textview"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#b5b5b5"></LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조회"
                android:textColor="#b5b5b5"
                android:id="@+id/item_board_main_content_info_detail_hit_textview"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/item_board_main_content_info_category">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO"
                android:textColor="#535353"
                android:id="@+id/item_board_main_content_info_category_index_no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#535353"
                android:text="3607"
                android:textStyle="bold"
                android:id="@+id/item_board_main_content_info_category_index_textview"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#535353"></LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#535353"
                android:textStyle="bold"
                android:text="공지"
                android:id="@+id/item_board_main_content_info_category_title_textview"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="16dp"
        android:layout_weight="3"
        android:id="@+id/item_board_main_content_count">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:id="@+id/item_board_main_content_count_main"
            android:gravity="center"
            android:background="@drawable/item_board_comment_count"  >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_board_main_content_count_textview"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#313131"
                android:textStyle="bold"
                android:text="07"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
